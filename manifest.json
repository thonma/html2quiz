{
  "manifest_version": 3,
  "version": "1.1",
  "name": "HTML to Quiz",
  "short_name": "h2q",
  "description": "ページ中の【○○】をクイズのように表示することができます。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon48.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "h2q_background.js"
  }
}